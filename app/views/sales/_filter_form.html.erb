<div class="span4">
  <%= form_tag params, :method => 'get', :class => 'autoSubmit' do -%>

    <div class="control-group">
      <%= label_tag 'county', nil, :class => 'control-label' %>
      <div class="controls">
        <%= select_tag "county", options_from_collection_for_select(Sale.select(:county).uniq.sort, "county", "county", params[:county]), {:include_blank => true} %>
      </div>
    </div>

    <div class="control-group">
      <%= label_tag 'address', nil, :class => 'control-label' %>
      <div class="controls">
        <%= text_field_tag :address, params[:address], :class => 'text_field' %>
      </div>
    </div>

  <%- end -%>
</div>

