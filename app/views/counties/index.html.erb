<div class="page-header">
  <h1>
    Counties
  </h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>
        name
      </th>
      <th>
        #sales
      </th>
      <th>
        average
      </th>
      <th>
        maximum
      </th>
      <th>
        sum
      </th>
  </thead>
  <tbody>
    <% @counties.each do |county| %>
      <tr>
        <td>
          <%= county.name %>
        </td>
        <td>
          <%= county.sales.count %>
        </td>
        <td>
          &euro;<%= number_with_delimiter Sale.where(:county_id => county.id).average(:price).to_i %>
        </td>
        <td>
          &euro;<%= number_with_delimiter Sale.where(:county_id => county.id).maximum(:price) %>
          <%=  %>
        </td>
        <td>
          &euro;<%= number_with_delimiter Sale.where(:county_id => county.id).sum(:price) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

